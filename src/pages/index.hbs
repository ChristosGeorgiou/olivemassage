<!-- Services Section -->
<section class="page-section" id="services">
	<div class="container">
		<h2 class="text-center mt-0">At Your Service</h2>
		<hr class="divider my-4">
		<div class="row">
			<div class="col-md-8 offset-md-2">
				{{#each _base.services}}
				<div class="p-4">
					{{#even @index}}
					<div class="row">
						<div class="col-4">
							<img class="img-thumbnail" src="{{image}}" alt="">
						</div>
						<div class="col-8">

							<h2>{{title}}</h2>
							{{#each content}}
							<p>{{this}}</p>
							{{/each}}
						</div>
					</div>
					{{else}}
					<div class="row">
						<div class="col-8">
							<h2>{{title}}</h2>
							{{#each content}}
							<p>{{this}}</p>
							{{/each}}
						</div>
						<div class="col-4">
							<img class="img-thumbnail" src="{{image}}" alt="">
						</div>
					</div>
					{{/even}}
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</section>

